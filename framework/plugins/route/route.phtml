<?php

namespace Ephect\Plugins\Route;

use Ephect\Components\View;
use Ephect\Plugins\Router\RouterService;
use Ephect\Registry\Registry;
use Ephect\Registry\RouteRegistry;

use function Ephect\Hooks\useEffect;

function Route($props)
{
    useEffect(function () use($props) {
        $routeBuilder = new RouteBuilder($props);
        $route = $routeBuilder->build();

        $router = new RouterService();
        $router->addRoute($route->getMethod(), $route->getRule(), $route->getRedirect());
        $router->saveRoutes();

        $routes = Registry::item('router')['node'];
        array_shift($routes);
        Registry::write('router', 'node', $routes);
        
        if(count($routes) === 0) {
            rename(RouteRegistry::getCacheFilename(), CACHE_DIR . 'routes.json');
        }

        $match = $router->matchRoute($route);

        if($match !== null) {
            list($path, $query) = $match;
            View::render($path);
        }

    });

    return (<<<HTML
        
    HTML);
}
