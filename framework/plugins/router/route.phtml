<?php

namespace FunCom\Plugins\Router;

function Route($props)
{
    $routeBuilder = new RouteBuilder($props, ['method', 'rule', 'redirect']);
    $route = $routeBuilder->build();

    $router = new RouterService();
    $router->addRoute($route->getRule(), $route->getRedirect());
    $router->saveRoutes();

    return (<<<HTML
        {{ ...props }}
    HTML);
}
