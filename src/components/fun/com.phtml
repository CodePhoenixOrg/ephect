<?php
namespace Fun;

use function FunCom\Hooks\useEffect;

function Com($props)
{
    useEffect(function() use ($props, &$b, &$c, &$d) {
        $b = 'It is a';
        $c = 'functional component';
        $d = $props->from;
    });

    return (<<<HTML
    <h1>{{ props->message }}</h1>
    <sub>from {{ d }}</sub>
    <h2>{{ b }}</h2>
    <h3>{{ c }}</h3>
    <Dummy />
    HTML);
}
